{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "./src/**/*.ts"
  ]
}
